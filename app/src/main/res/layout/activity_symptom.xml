<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SymptomActivity"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- things to scroll -->

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your Gender"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:paddingTop="30dp"
            android:paddingBottom="10dp"
            android:layout_marginHorizontal="30dp"
            />

        <RadioGroup
            android:id="@+id/gender_radio"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/male_radio_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textColor="@color/white"
                android:layout_marginHorizontal="30dp"
                android:textSize="16dp" />

            <RadioButton
                android:id="@+id/female_radio_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textColor="@color/white"
                android:layout_marginHorizontal="30dp"
                android:textSize="16dp"/>

            <RadioButton
                android:id="@+id/others_radio_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Others"
                android:textColor="@color/white"
                android:layout_marginHorizontal="30dp"
                android:textSize="16dp"/>
        </RadioGroup>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your Age"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginHorizontal="30dp"
            android:paddingVertical="10dp"/>

        <EditText
            android:id="@+id/age_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/form_edittext_field"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Were you hospitalized?"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginHorizontal="30dp"
            android:paddingVertical="10dp"/>

        <RadioGroup
            android:id="@+id/hosp_radio"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/hosp_radio_yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:layout_marginHorizontal="30dp"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <RadioButton
                android:id="@+id/hosp_radio_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No"
                android:layout_marginHorizontal="30dp"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are you experiencing these Symptoms?"
            android:layout_marginHorizontal="30dp"
            android:paddingVertical="10dp"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <CheckBox
            android:id="@+id/fever_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fever"
            android:layout_marginHorizontal="30dp"
            android:paddingVertical="10dp"
            android:textColor="@color/white" />

        <CheckBox
            android:id="@+id/breath_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Breathlessness"
            android:layout_marginHorizontal="30dp"
            android:paddingVertical="10dp"
            android:textColor="@color/white" />

        <CheckBox
            android:id="@+id/senses_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loss of taste/smell"
            android:layout_marginHorizontal="30dp"
            android:paddingVertical="10dp"
            android:textColor="@color/white" />

        <CheckBox
            android:id="@+id/fatigue_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fatigue"
            android:layout_marginHorizontal="30dp"
            android:paddingVertical="10dp"
            android:textColor="@color/white" />

        <CheckBox
            android:id="@+id/depr_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Depression"
            android:layout_marginHorizontal="30dp"
            android:paddingVertical="10dp"
            android:textColor="@color/white" />

        <CheckBox
            android:id="@+id/cough_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cough/Sore throat"
            android:layout_marginHorizontal="30dp"
            android:paddingVertical="10dp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/assesment_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:text="Next" />

    </LinearLayout>

</ScrollView>
